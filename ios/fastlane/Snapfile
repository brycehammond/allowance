# Snapfile - Configuration for fastlane snapshot
# https://docs.fastlane.tools/actions/snapshot/

# Devices to capture screenshots on
devices([
  "iPhone 16 Pro Max",  # 6.7" display (required for App Store)
  "iPad Pro 13-inch (M4)"  # 12.9" display for iPad
])

# Languages for screenshots
languages([
  "en-US"
])

# The name of the scheme which contains the UI Tests
scheme("AllowanceTracker")

# Where to save the screenshots
output_directory("./screenshots")

# Clear previous screenshots
clear_previous_screenshots(true)

# Project path
project("./AllowanceTracker/AllowanceTracker.xcodeproj")

# Test target
testplan(nil)

# Use dark mode (optional - can enable for dark mode screenshots)
# dark_mode(true)

# Don't stop on first error - capture as many screenshots as possible
stop_after_first_error(false)

# Skip cleaning before build
skip_open_summary(true)

# Override status bar (iOS 13+)
override_status_bar(true)

# Number of concurrent simulators
concurrent_simulators(true)
