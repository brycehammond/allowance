@using AllowanceTracker.Services
@using AllowanceTracker.Models
@inject IAccountService AccountService

<nav class="flex flex-1 flex-col">
    <ul role="list" class="flex flex-1 flex-col gap-y-7">
        <li>
            <ul role="list" class="-mx-2 space-y-1">
                @if (CurrentUser != null)
                {
                    @if (CurrentUser.Role == UserRole.Parent)
                    {
                        <li>
                            <NavLink href="dashboard" Match="NavLinkMatch.All"
                                     class="group flex gap-x-3 rounded-md p-2 text-sm leading-6 font-semibold text-white hover:bg-green-700 hover:text-white transition-colors">
                                <svg class="h-6 w-6 shrink-0" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 12l8.954-8.955c.44-.439 1.152-.439 1.591 0L21.75 12M4.5 9.75v10.125c0 .621.504 1.125 1.125 1.125H9.75v-4.875c0-.621.504-1.125 1.125-1.125h2.25c.621 0 1.125.504 1.125 1.125V21h4.125c.621 0 1.125-.504 1.125-1.125V9.75M8.25 21h8.25" />
                                </svg>
                                Dashboard
                            </NavLink>
                        </li>
                        <li>
                            <NavLink href="analytics"
                                     class="group flex gap-x-3 rounded-md p-2 text-sm leading-6 font-semibold text-white hover:bg-green-700 hover:text-white transition-colors">
                                <svg class="h-6 w-6 shrink-0" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" d="M3 13.125C3 12.504 3.504 12 4.125 12h2.25c.621 0 1.125.504 1.125 1.125v6.75C7.5 20.496 6.996 21 6.375 21h-2.25A1.125 1.125 0 013 19.875v-6.75zM9.75 8.625c0-.621.504-1.125 1.125-1.125h2.25c.621 0 1.125.504 1.125 1.125v11.25c0 .621-.504 1.125-1.125 1.125h-2.25a1.125 1.125 0 01-1.125-1.125V8.625zM16.5 4.125c0-.621.504-1.125 1.125-1.125h2.25C20.496 3 21 3.504 21 4.125v15.75c0 .621-.504 1.125-1.125 1.125h-2.25a1.125 1.125 0 01-1.125-1.125V4.125z" />
                                </svg>
                                Analytics
                            </NavLink>
                        </li>
                        <li>
                            <NavLink href="children/create"
                                     class="group flex gap-x-3 rounded-md p-2 text-sm leading-6 font-semibold text-white hover:bg-green-700 hover:text-white transition-colors">
                                <svg class="h-6 w-6 shrink-0" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" d="M18 7.5v3m0 0v3m0-3h3m-3 0h-3m-2.25-4.125a3.375 3.375 0 11-6.75 0 3.375 3.375 0 016.75 0zM3 19.235v-.11a6.375 6.375 0 0112.75 0v.109A12.318 12.318 0 019.374 21c-2.331 0-4.512-.645-6.374-1.766z" />
                                </svg>
                                Add Child
                            </NavLink>
                        </li>
                    }
                    else
                    {
                        <li>
                            <NavLink href="dashboard" Match="NavLinkMatch.All"
                                     class="group flex gap-x-3 rounded-md p-2 text-sm leading-6 font-semibold text-white hover:bg-green-700 hover:text-white transition-colors">
                                <svg class="h-6 w-6 shrink-0" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" d="M12 6v12m-3-2.818l.879.659c1.171.879 3.07.879 4.242 0 1.172-.879 1.172-2.303 0-3.182C13.536 12.219 12.768 12 12 12c-.725 0-1.45-.22-2.003-.659-1.106-.879-1.106-2.303 0-3.182s2.9-.879 4.006 0l.415.33M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                                </svg>
                                My Allowance
                            </NavLink>
                        </li>
                    }
                }
                else
                {
                    <li>
                        <NavLink href="" Match="NavLinkMatch.All"
                                 class="group flex gap-x-3 rounded-md p-2 text-sm leading-6 font-semibold text-white hover:bg-green-700 hover:text-white transition-colors">
                            <svg class="h-6 w-6 shrink-0" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 12l8.954-8.955c.44-.439 1.152-.439 1.591 0L21.75 12M4.5 9.75v10.125c0 .621.504 1.125 1.125 1.125H9.75v-4.875c0-.621.504-1.125 1.125-1.125h2.25c.621 0 1.125.504 1.125 1.125V21h4.125c.621 0 1.125-.504 1.125-1.125V9.75M8.25 21h8.25" />
                            </svg>
                            Home
                        </NavLink>
                    </li>
                    <li>
                        <NavLink href="login"
                                 class="group flex gap-x-3 rounded-md p-2 text-sm leading-6 font-semibold text-white hover:bg-green-700 hover:text-white transition-colors">
                            <svg class="h-6 w-6 shrink-0" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 9V5.25A2.25 2.25 0 0013.5 3h-6a2.25 2.25 0 00-2.25 2.25v13.5A2.25 2.25 0 007.5 21h6a2.25 2.25 0 002.25-2.25V15M12 9l-3 3m0 0l3 3m-3-3h12.75" />
                            </svg>
                            Login
                        </NavLink>
                    </li>
                    <li>
                        <NavLink href="register"
                                 class="group flex gap-x-3 rounded-md p-2 text-sm leading-6 font-semibold text-white hover:bg-green-700 hover:text-white transition-colors">
                            <svg class="h-6 w-6 shrink-0" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M19 7.5v3m0 0v3m0-3h3m-3 0h-3m-2.25-4.125a3.375 3.375 0 11-6.75 0 3.375 3.375 0 016.75 0zM4 19.235v-.11a6.375 6.375 0 0112.75 0v.109A12.318 12.318 0 0110.374 21c-2.331 0-4.512-.645-6.374-1.766z" />
                            </svg>
                            Register
                        </NavLink>
                    </li>
                }
            </ul>
        </li>
    </ul>
</nav>

@code {
    private ApplicationUser? CurrentUser;

    protected override async Task OnInitializedAsync()
    {
        CurrentUser = await AccountService.GetCurrentUserAsync();
    }
}
